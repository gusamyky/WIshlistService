<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
           fx:controller="app.wishlist.controller.RevealController"
           style="-fx-padding: 40; -fx-background-color: white;">

    <VBox fx:id="waitingBox" alignment="CENTER" spacing="20">
        <Label text="ðŸŽ… Secret Santa Event" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="The draw has not happened yet." style="-fx-text-fill: gray; -fx-font-size: 16px;"/>
        <Label text="Check back later!" style="-fx-text-fill: gray;"/>
    </VBox>

    <VBox fx:id="resultBox" alignment="CENTER" spacing="30" visible="false">
        <Label text="You are the Secret Santa for..." style="-fx-font-size: 18px;"/>

        <Label fx:id="targetNameLabel" text="[NAME]"
               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>

        <Button text="View Their Wishlist" onAction="#handleGoToWishlist"
                styleClass="button-success" style="-fx-font-size: 16px; -fx-padding: 10 20;"/>
    </VBox>

</StackPane>
