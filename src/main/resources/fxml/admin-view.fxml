<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="app.wishlist.controller.AdminController"
            fitToWidth="true" styleClass="scrollpane-white">

    <VBox spacing="20" styleClass="container-white-30">

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="â† Back" onAction="#navigateBack" styleClass="button-back"/>
            <Label text="Secret Santa Admin Hub" styleClass="admin-title"/>
        </HBox>

        <Label text="Configure the event and perform the draw." textFill="gray"/>

        <Separator/>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Event End Date:" styleClass="label-bold"/>
            <DatePicker fx:id="datePicker"/>
        </HBox>

        <Label text="Select Participants" styleClass="label-bold-medium"/>

        <HBox spacing="10" prefHeight="300">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Available Users"/>
                <ListView fx:id="availableList" VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox spacing="10" alignment="CENTER">
                <Button text="&gt;" onAction="#handleAdd" prefWidth="40"/>
                <Button text="&lt;" onAction="#handleRemove" prefWidth="40"/>
            </VBox>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Selected Group"/>
                <ListView fx:id="selectedList" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>

        <Separator/>

        <Button text="ðŸŽ² DRAW PAIRS" onAction="#handleDraw"
                styleClass="button-accent button-accent-draw" maxWidth="Infinity"/>

        <Label text="Feedback Analysis" styleClass="label-bold"/>
        <Button text="ðŸ“‚ Load &amp; Analyze Reports" onAction="#handleViewReports"
                maxWidth="Infinity" styleClass="button-reports"/>

        <Separator/>

        <VBox fx:id="myRecipientBox" spacing="15" alignment="CENTER" visible="false"
              styleClass="container-light-rounded">
            <Label text="Your Secret Santa Recipient:" styleClass="label-bold-medium"/>

            <Label fx:id="myRecipientNameLabel" text="[NAME]"
                   styleClass="recipient-name-label"/>

            <Button text="View Their Wishlist" onAction="#handleViewMyRecipientWishlist"
                    styleClass="button-success button-success-medium"/>
        </VBox>

    </VBox>

</ScrollPane>

