<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="20"
      style="-fx-padding: 40; -fx-background-color: white;" xmlns="http://javafx.com/javafx/21"
      fx:controller="app.wishlist.controller.FeedbackController">

    <Label text="Event Feedback" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="How was your Secret Santa experience?" textFill="gray"/>

    <VBox spacing="5">
        <Label text="Rate your experience (1-5):" style="-fx-font-weight: bold;"/>
        <Slider fx:id="ratingSlider" min="1" max="5" majorTickUnit="1" minorTickCount="0"
                showTickLabels="true" showTickMarks="true" snapToTicks="true" value="5"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Comments / Suggestions:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="commentArea" prefRowCount="4" wrapText="true"
                  promptText="What did you like? What can we improve?"/>
    </VBox>

    <CheckBox fx:id="againCheck" text="I would participate again next year" selected="true"/>

    <Button text="Submit Feedback" onAction="#handleSubmit" styleClass="button-accent" maxWidth="200"/>

</VBox>
